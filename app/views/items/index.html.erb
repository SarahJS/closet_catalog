<p id="notice"><%= notice %></p>

<h1>Closet Items</h1>

<% @items.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |item| %>
      <div class="col-md-4">
        <%= image_tag item.picture_url, width: '100%' if item.picture.present?%>
        <h4><%= link_to item.name, item %></h4>
        <%= item.description %>
      </div>
    <% end %>
  </div>
<% end %>
